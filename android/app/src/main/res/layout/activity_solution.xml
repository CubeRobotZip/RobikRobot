<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start|end"
    android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/solutionTitle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/solutionText" />

        <TextView
            android:id="@+id/solutionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_marginStart="77dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView">

            <ImageButton
                android:id="@+id/solPrevBtn"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:contentDescription="@string/backBtnDesc"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_back"
                android:layout_width="wrap_content" />

            <ImageButton
                android:id="@+id/solFwdBtn"
                android:layout_height="wrap_content"
                android:contentDescription="@string/forwardBtnDesc"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_forward"
                android:layout_width="wrap_content" />
        </LinearLayout>
    
</RelativeLayout>
